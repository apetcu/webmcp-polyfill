{
  "name": "@apetcu/webmcp-polyfill",
  "version": "0.1.0",
  "description": "Lightweight W3C WebMCP (navigator.modelContext) polyfill for making websites AI-agent-friendly",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "webmcp",
    "mcp",
    "model-context-protocol",
    "ai-agent",
    "polyfill",
    "navigator.modelContext",
    "w3c"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
